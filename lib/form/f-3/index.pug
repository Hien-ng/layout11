section.canhcam-form-3#contact(data-spy="scroll" data-target="#list-example" data-offset="0")
	article.container.info
		.row.justify-content-center
			.col
				h2.h2.text-center Contact
		.row
			.col
				form.validator
					.row
						.col-lg-4
							.form-group
								input#name.form-control(type='text', placeholder='ENTER YOUR NAME', data-error="Vui lòng nhập thông tin", required)
						.col-lg-4
							.form-group
								input#Email.form-control(type='text', placeholder='ENTER YOUR MAIL', data-error="Vui lòng nhập thông tin", pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", required)
						.col-lg-4
							.form-group
								input#Phone.form-control(type='text', placeholder='ENTER YOUR PHONE', data-error="Vui lòng nhập thông tin", pattern="^[_A-z0-9]{1,}$", required)
						.col-lg-12
							.form-group
								textarea#sms.form-control(placeholder='MESSAGE...', name="sms", cols="30", rows="8")
						.col-lg-12
							.form-group.text-center
								button.btn.btn-more.text-uppercase(type="submit")
									| Submit
